{
  "kind": "collectionType",
  "collectionName": "resources",
  "info": { "singularName": "resource", "pluralName": "resources", "displayName": "Resource" },
  "options": { "draftAndPublish": true },
  "pluginOptions": { "i18n": { "localized": true } },
  "attributes": {
    "title": { "type": "string", "required": true, "pluginOptions": { "i18n": { "localized": true } } },
    "slug": { "type": "uid", "targetField": "title", "required": true },
    "excerpt": { "type": "text", "pluginOptions": { "i18n": { "localized": true } } },
    "content": { "type": "richtext", "pluginOptions": { "i18n": { "localized": true } } },

    "type": { "type": "enumeration", "enum": ["guide", "checklist", "calculator", "news"], "default": "guide" },
    "readTime": { "type": "string" },
    "author": { "type": "string" },
    "publishedOn": { "type": "date" },
    "lastUpdated": { "type": "datetime" },

    "icon": { "type": "string" },
    "colorClass": { "type": "string" },
    "cover": { "type": "media", "multiple": false, "allowedTypes": ["images"] },

    "featured": { "type": "boolean", "default": false },
    "downloadCount": { "type": "integer", "default": 0 },

     "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::resource-tag.resource-tag"
    },
    "category": { "type": "relation", "relation": "manyToOne", "target": "api::resource-category.resource-category" },

    "relatedServices": { "type": "relation", "relation": "manyToMany", "target": "api::service.service" },

    "externalLink": { "type": "string" },
    "toolLink": { "type": "string" },

    "seo": { "type": "component", "component": "shared.seo" }
  }
}
