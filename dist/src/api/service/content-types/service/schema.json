            "components": [
                "blocks.services",
                "blocks.process-steps-block",
                "blocks.hero",
                "blocks.heading-section",
                "blocks.card-grid",
                "blocks.business-immigration",
                "blocks.application-process",
                "blocks.comparison-grid",
                "blocks.service-variant-cards"
