        "seoDescription": {
            "type": "text",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "ogImage": {
            "type": "media",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "multiple": false,
            "allowedTypes": [
                "images"
            ]
        },
