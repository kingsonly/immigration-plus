{
    "kind": "collectionType",
    "collectionName": "success_stories",
    "info": {
        "singularName": "success-story",
        "pluralName": "success-stories",
        "displayName": "Success Story",
        "description": "Individual client success story"
    },
    "options": { "draftAndPublish": true },
    "pluginOptions": { "i18n": { "localized": true } },
    "attributes": {
        "name": { "type": "string", "required": true, "pluginOptions": { "i18n": { "localized": true } } },
        "slug": { "type": "uid", "targetField": "name", "required": true },
        "country": { "type": "string", "pluginOptions": { "i18n": { "localized": true } } },
        "program": { "type": "string", "pluginOptions": { "i18n": { "localized": true } } },
        "timeline": { "type": "string", "pluginOptions": { "i18n": { "localized": true } } },
        "quote": { "type": "text", "pluginOptions": { "i18n": { "localized": true } } },
        "story": { "type": "richtext", "pluginOptions": { "i18n": { "localized": true } } },
        "outcome": { "type": "string", "pluginOptions": { "i18n": { "localized": true } } },
        "category": {
            "type": "enumeration",
            "enum": ["skilled-worker", "pnp", "business", "family", "student", "trades", "caregiver"],
            "default": "skilled-worker"
        },
        "rating": { "type": "integer", "min": 1, "max": 5, "default": 5 },
        "featured": { "type": "boolean", "default": false },
        "image": { "type": "media", "multiple": false, "allowedTypes": ["images"] },
        "videoUrl": { "type": "string" },
        "videoThumb": { "type": "media", "multiple": false, "allowedTypes": ["images"] }
    }
}
