        "summary": {
            "type": "text",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "featuredImage": {
            "type": "media",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "multiple": false,
            "allowedTypes": [
                "images",
                "files"
            ]
        },
        "blocks": {
            "type": "dynamiczone",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
